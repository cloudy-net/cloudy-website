    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <nav>
        <ul class="hideOnSmall">
            <li class="hover-underline-animation homeNavItem">
                <a href="/home"><img src="~/assets/images/cloudy_bd_fb.png" alt="Cloudy logo" width="30" height="18.147" /></a>
                <a id="logoTxt" class="logo" href="/home">Cloudy</a>
            </li>
            <li><a class="navItem hover-underline-animation" href="/product/pricing">Pricing</a></li>
            <li><a class="navItem hover-underline-animation" href="/resources/docs">Docs</a></li>
            <li><a class="navItem hover-underline-animation" href="/about/support">Support</a></li>
            <li class="hover-underline-animation"><a target="_blank" href="https://github.com/cloudy-cms/Cloudy.CMS" title="Github"><i class="fa-brands fa-github fa-lg"></i></a></li>
            <li class="hover-underline-animation"><a target="_blank" href="https://twitter.com/cloudydotnet" title="Twitter"><i class="fa-brands fa-twitter fa-lg"></i></a></li>
            <li class="hover-underline-animation"><a target="_blank" href="https://www.youtube.com/channel/UC8BRpzvX5J9n8-2G1KIf5xg" title="Youtube"><i class="fa-brands fa-youtube fa-lg"></i></a></li>
        </ul>
        <div class="menuSmallContainer">
            <div class="menuSmallContent">
                <a href="/home"><img src="~/assets/images/cloudy_bd_fb.png" alt="Cloudy logo" width="50" height="30.245" /></a>
                <div class="menuSmallRight">
                    <a class="hover-underline-animation GitHubStars" target="_blank" href="https://github.com/cloudy-cms/Cloudy.CMS" title="Github">
                        <i class="fa-brands fa-github fa-lg"></i>
                        <div class="GitHubStarsScore">100+</div>
                    </a>
                    <a id="hamburger" title="Hamburger">
                        <div class="buttonContainer">
                            <i class="fa-solid fa-bars fa-lg hamburger1"></i>
                            <i class="fa-solid fa-burger fa-lg hamburger2"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="mobileMenuContainer">
            <div id="mobileMenu" class="mobileMenu">
                <div class="mobileMenuHeader">
                    <a href="/home"><img src="~/assets/images/cloudy_bd_fb.png" alt="Cloudy logo" width="50" height="30.245" /></a>
                    <a id="closeMobileMenu"><div class="buttonContainer"><i class="fa-solid fa-xmark fa-lg"></i></div></a>
                </div>
                <div class="mobileMenuBody">
                    <a class="mobileMenuItem hover-underline-animation" href="/product/pricing">Pricing</a>
                    <a class="mobileMenuItem hover-underline-animation" href="/resources/docs">Docs</a>
                    <a class="mobileMenuItem hover-underline-animation" href="/about/support">Support</a>
                </div>
                <div class="mobileMenuFooter">
                    <a target="_blank" href="https://github.com/cloudy-cms/Cloudy.CMS" title="Github"><i class="fa-brands fa-github fa-lg"></i></a>
                    <a target="_blank" href="https://twitter.com/cloudydotnet" title="Twitter"><i class="fa-brands fa-twitter fa-lg"></i></a>
                    <a target="_blank" href="https://www.youtube.com/channel/UC8BRpzvX5J9n8-2G1KIf5xg" title="Youtube"><i class="fa-brands fa-youtube fa-lg"></i></a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-row-top">
            <div class="footer-row-top-el">
                <h3>Streamline your business with bespoke back office software</h3>
            </div>
            <div class="footer-row-top-el">
                <button class="button footerBtn" onclick="location.href = '/product/pricing';"><span>Start building  </span></button>
            </div>
        </div>
        <div class="footer-row-bottom">
            <div class="footer-row-bottom-top">
                <p><a href="/product/pricing">Pricing</a></p>
                <p><a href="/resources/docs">Docs</a></p>
                <p><a href="/about/support">Support</a></p>
            </div>
            <div class="footer-row-bottom-middle">
                <a target="_blank" href="https://github.com/cloudy-cms/Cloudy.CMS" title="Github"><i class="fa-brands fa-github fa-2x"></i></a>
                <a target="_blank" href="https://twitter.com/cloudydotnet" title="Twitter"><i class="fa-brands fa-twitter fa-2x"></i></a>
                <a target="_blank" href="https://www.youtube.com/channel/UC8BRpzvX5J9n8-2G1KIf5xg" title="Youtube"><i class="fa-brands fa-youtube fa-2x"></i></a>
            </div>
            <div class="footer-row-bottom-bottom">
