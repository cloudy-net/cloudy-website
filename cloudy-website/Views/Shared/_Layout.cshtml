    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Build a back office in &lt;6 min - @ViewData["Title"]</title>
    <meta name="description" content="Use Cloudy to launch solutions for your clients, faster." />
    <meta property="og:title" content="Use Cloudy to launch solutions for your clients, faster" />
    <meta property="og:url" content="https://www.cloudy.net" />
    <meta property="og:image" content="https://res.cloudinary.com/ficka/image/upload/v1674680499/cloudy-website/socialslogo_poafcy.png" />
    <meta property="og:description" content="How Cloudy significantly reduces time to market, maintenance and makes your developers happier." />
